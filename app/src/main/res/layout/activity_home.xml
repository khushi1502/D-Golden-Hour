<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background=" #70d1f4 ">


    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="690dp"
        app:cardCornerRadius="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="25dp"
     app:cardElevation="@dimen/cardview_default_elevation">

        <TextView
            android:id="@+id/dgoldenhour"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="120dp"
            android:text="    D'GoldenHour"
            android:textStyle="bold"
            android:textColor="#7fc0d9"
            android:textSize="50dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#7fc0d9"
            app:cardCornerRadius="75dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-20dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:contentPaddingRight="40dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="90dp"
            app:cardBackgroundColor="#2718"/>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardBackgroundColor="#74A6"
            app:contentPadding="40dp"
            app:cardCornerRadius="90dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="250dp"
            app:cardElevation="@dimen/cardview_default_elevation"/>

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="350dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="290dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="login"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="138dp"
            android:background="#fffff"
            android:backgroundTint="#7fc0d9"
            android:textColor="#7fc0d9"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEY! Welcome back"
            android:textSize="23sp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="58dp"
            android:textStyle="bold"
            android:textColor="#7fc0d9"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="158dp"
            android:text="or Continue with"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="530dp"
            app:srcCompat="@drawable/google"
            android:scaleType="centerCrop"
            android:layout_marginLeft="138dp"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/apple"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="188dp"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/facebook"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="238dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member?"
            android:layout_marginTop="630dp"
            android:layout_marginLeft="115dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/registernow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register now"
            android:layout_marginTop="630dp"
            android:layout_marginLeft="214dp"
            android:textStyle="bold"
            android:textColor="#7fc0d9"
            android:textSize="15sp"/>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>